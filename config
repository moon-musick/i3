for_window [title="ftpane"] floating enable

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command   i3blocks
  position         top
  font pango:      Hack 9
  separator_symbol "|"

  colors {
    background          $darkest
    statusline          $bright
    separator           $base0
    focused_workspace   $blue       $blue        $brightest
    active_workspace    $bright     $bright      $darkest
    inactive_workspace  $darker     $darkest     $normal
    urgent_workspace    $red        $red         $darkest
  }
}

# toggle status bar visibility
bindsym $mod+b bar mode toggle

# enable / disable touchpad
bindsym $mod+y        exec --no-startup-id /home/lucas/bin/tptoggle enable
bindsym $mod+shift+y  exec --no-startup-id /home/lucas/bin/tptoggle disable

# custom initialization (screensavers, touchpad etc.)
exec_always --no-startup-id /home/lucas/.i3/startup
# start NetworkManager applet
exec --no-startup-id nm-applet
# start sound applet
exec --no-startup-id gnome-sound-applet
